<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="garbi.supersudoku.controller.DificultadController"
            style="-fx-background-color: #d3d3d3;"
            stylesheets="@menu.css">

    <Pane fx:id="numbersPane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>


    <!-- Botones de dificultad -->
    <VBox fx:id="difficultyButtons" alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button fx:id="btnNormal" text="Normal" styleClass="menu-button, button-max" maxWidth="200"/>
        <Button fx:id="btnExperto" text="Experto" styleClass="menu-button, button-max" maxWidth="200"/>
        <Button fx:id="btnBack" text="←" styleClass="menu-button, button-max" maxWidth="200"/>
    </VBox>

</AnchorPane>

